<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css">
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>

<div class="container course-column-box">
    <div class='row course-name-row' style='margin-left:0px; margin-right: 0px;'>
        <div id="course-name"><%= link_to course.name, course, class:'btn course-name-button' %></div>
    </div>
    
    
    <% if course.students.size==0 %>  
        <div style='height: 50px; display: flex; align-items: center; margin-left: 35px; color:grey'>
            <h6>No Student Enrolled</h6>
        </div>
    <% elsif  group(course.students[0], course).nil?%>
        <div style='height: 50px; display: flex; align-items: center; margin-left: 35px; color:grey'>
            <h6>Not yet Created Group</h6>
        </div>        
    <% else %>
        <div style='height: 50px; display: flex; align-items: center; margin-left: 35px; color:grey'>
            <h6>Group Created</h6>
        </div>    
    <% end %>
    <div class='row course-drop-row' style='margin-left:0px; margin-right: 0px;'>
        <div id="course-drop-button">
        <%= link_to course, method: :delete, data: { confirm: 'Are you sure you want to drop this course?' } do %>
        <button class="btn btn-outline-primary dropButton"><i class="fas fa-minus-circle" style='margin-left: 2px'></i> Delete course</button>
        <% end %>
        </div>
    </div>
</div>