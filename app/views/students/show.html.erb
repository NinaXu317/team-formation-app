<body class='view4'>
  <div class='container' style="padding-top: 30px">
    <p id="notice"><%= notice %></p>
    <div class='container' id='body-container-course-show'>
    <div class='page-wrap'> 
      <div class='row profile-row'>
        <div class='col' style='padding: 40px'>
          <div class='row'>
            <div class='column'>
              <span class="fa-stack fa-3x">
                <i class="fas fa-circle fa-stack-2x" style="color: rgb(77, 131, 203)"></i>
                <i class="fas fa-user-graduate fa-stack-1x fa-inverse"></i>
              </span>
            </div>
            <div class='column'>
              <p style='text-transform: uppercase; font-size: x-large;font-weight: bold; padding-top:5px'><%= @student.firstname%> <%=@student.lastname %></p>
              <p style='margin-top: -15px'><%= @student.email %></p>
            </div>
          </div>
        </div>
        <div class='col' style='padding: 60px'>
          <% add_course_path = @student.id.to_s+ "/add_course" %>
          <div id="add-course-button">
            <%= link_to add_course_path, remote: true do %>
              <button class="btn btn-outline-primary addButton"><i class="fas fa-plus"></i> Add new course</button>
            <% end %>
          </div>
        </div>
      </div>

      <hr/>
      <div class = "container courses-info-row" id="students-course-info-row">
        <%= render partial: 'course', collection: @courses%>
      </div>

      <div class='container'>
      <%= link_to 'Edit', edit_student_path(@student) %> |
      <%= link_to 'Back', students_path %>
      </div>

    
    </div>
    </div>
  </div>
</body>

