<!DOCTYPE html>
<html>
  <head>
    <title>CapstoneProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to "TeamFormation", root_path, id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Home",   root_path %></li>
            <% if !logged_in? %>
              <li><%= link_to "Student Login", '/student_login' %></li>
              <li><%= link_to "Professor Login", '/professor_login' %></li>
              <li><%= link_to "Student Sign Up", new_student_path %></li>
              <li><%= link_to "Professor Sign Up", new_professor_path %></li>
            <% else %>
              <li><%= link_to "Profile", profile_url %></li>
              <li><%= link_to "Logout", logout_path %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>
    <%= yield %>
    <div class="container">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
