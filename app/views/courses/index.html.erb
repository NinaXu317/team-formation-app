<p id="notice"><%= notice %></p>

<h1>Courses</h1>
<%if current_user_type == "professor" || current_user_type == "student"then%>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Pin</th>
      <th>Professor</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.pin %></td>
        
        <td align="center"><%= course.professor_id %></td>
        <!--
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        -->
      </tr>
    <% end %>
  </tbody>
  

</table>
<%else %>
    <br>
    <p style="font-size:160%;"><strong>Please log in to see further information</strong></p>
  <%end %>
<br>

