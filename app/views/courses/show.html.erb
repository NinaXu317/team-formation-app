<p id="notice"><%= notice %></p>
<div class='container' id='body-container-course-show'>
<p>
  <strong>Name:</strong>
  <%= @course.name %>
</p>

<p>
  <strong>Pin:</strong>
  <%= @course.pin %>
</p>

<p>
  <strong>Professor:</strong>
  <%= @course.professor_id %>
</p>

<p> <strong> Students: </strong> </p>
<ul> <%=showStudents(@course.students)%></ul>

<p> <strong> Groups: </strong> </p>
<% @groups.each do |group| %>
  <ul> <%= group.project_name%>: <%=showGroups(@groups)[group.project_name]%></ul>
<% end %>

<p>
  <strong>Preferences_count:</strong>
  <%= @preferences.size %>
</p>

<% if current_user_type == "professor" && @professor_id == current_user.id%>
  <% create_groups_path = @course.id.to_s+ "/create_groups" %>
  <%= button_to 'Create Random Groups', {:controller => "courses", :action => "create_groups", :algo => "random"}, :class => "btn_primary", :method=>:post%>
  <%= button_to 'Create Groups Based on Project Preference', {:controller => "courses", :action => "create_groups", :algo => "project_only"}, :class => "btn_primary", :method=>:post%>
  <br> <br>
<%end%>

<%= link_to 'Propose project', new_group_path(course: @course)%>
<br>
<% if current_user_type == "student"%>
  <%= link_to 'Create preference', new_preference_path(course: @course)%>
<% end %>
<br> <br>

<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back', courses_path %>
</div>